<div role="complementary" data-view="map" data-focus="{{#scope}}{{@id}}{{/scope}}" class="color-scheme-map column medium">
    <a href="/aggregation/" class="hijax transclude map-view-hidden" target="_self">Aggregations</a>
</div>
<div role="main" class="color-scheme-text container column medium">
  {{#scope}}
      <div class="resource-concept">
          <script type="application/ld+json">
            {{{.}}}
          </script>
          <h1>{{getIcon "Concept"}} {{#name}}{{@value}}{{/name}}</h1>
          <pre>{{@id}}</pre>
          {{#if inScheme}}
          <h2>In scheme</h2>
          <ul class="fa-ul related-list">
            <script type="application/ld+json">
              {{{inScheme}}}
            </script>
            {{#inScheme}}
                <li about="{{@id}}">
                  {{> (stringFormat "ResourceIndex/%s/link.mustache" @type) }}
                </li>
            {{/inScheme}}
          </ul>
          {{/if}}
          {{#if broader}}
          <h2>Broader</h2>
          <ul class="fa-ul related-list">
              <script type="application/ld+json">
                  {{{broader}}}
              </script>
            {{#broader}}
                <li about="{{@id}}">
                  {{> (stringFormat "ResourceIndex/%s/link.mustache" @type) }}
                </li>
            {{/broader}}
          </ul>
          {{/if}}
          {{#if narrower}}
          <h2>Narrower</h2>
          <ul class="fa-ul related-list">
            <script type="application/ld+json">
                {{{narrower}}}
            </script>
            {{#narrower}}
                <li about="{{@id}}">
                  {{> (stringFormat "ResourceIndex/%s/link.mustache" @type) }}
                </li>
            {{/narrower}}
          </ul>
          {{/if}}
      </div>
  {{/scope}}
</div>
