<fieldset>

    <legend>Organization</legend>
    {{input "@type" "Organization" readonly="readonly"}}
    {{input "@id" [@id] readonly="readonly"}}

    {{> FormElements/LocalizedInput.mustache property=name key="name" title="Name"}}

    {{> FormElements/LocalizedTextarea.mustache property=description key="description" title="Description"}}

    {{input "email" email type="email" }}
    {{input "url" url type="url"}}
    {{input "image" image type="url"}}

    {{> FormElements/Id.mustache property=provider key="provides" title="Provides" lookup="/resource/?q=about.@type:Service"}}

    {{> ResourceIndex/Place/edit.mustache property=location key="location"}}

</fieldset>
