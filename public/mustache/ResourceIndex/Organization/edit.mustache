<fieldset>

    <div class="hidden">
        <legend>Organization</legend>
        {{input "@type" "Organization" readonly="readonly"}}
        {{input "@id" [@id] readonly="readonly"}}
    </div>

    {{> FormElements/localizedInput.mustache property=name key="name" title=(i18n "Organization.name") tooltip=(i18n "Organization.name" bundle="descriptions")}}

    {{> FormElements/input.mustache property=url key="url" title=(i18n "Organization.url") tooltip=(i18n "Organization.url" bundle="descriptions") hidden=false multiple=false type="url"}}

    {{> FormElements/input.mustache property=email key="email" title=(i18n "Organization.email") tooltip=(i18n "Organization.email" bundle="descriptions") hidden=false multiple=false type="email"}}

    {{> FormElements/localizedTextarea.mustache property=description key="description" title=(i18n "Organization.description") tooltip=(i18n "Organization.description" bundle="descriptions")}}

    {{> FormElements/input.mustache property=additionalType key="additionalType" title=(i18n "Organization.additionalType") tooltip=(i18n "Organization.additionalType" bundle="descriptions") hidden=true multiple=true type="text"}}

    {{> FormElements/select.mustache property=countryChampionFor key="countryChampionFor" title=(i18n "Organization.countryChampionFor") tooltip=(i18n "Organization.countryChampionFor" bundle="descriptions") multiple=true type="text" options="countries"}}

    {{> FormElements/localizedInput.mustache property=alternateName key="alternateName" title=(i18n "Organization.alternateName") tooltip=(i18n "Organization.alternateName" bundle="descriptions")}}

    {{> FormElements/input.mustache property=image key="image" title=(i18n "Organization.image") tooltip=(i18n "Organization.image" bundle="descriptions") hidden=false multiple=false type="file"}}

    {{> ResourceIndex/Place/edit.mustache property=location key="location" title=(i18n "Organization.location") tooltip=(i18n "Organization.location" bundle="descriptions")}}

    {{> FormElements/id.mustache property=contactPoint key="contactPoint" title=(i18n "Organization.contactPoint") tooltip=(i18n "Organization.contactPoint" bundle="descriptions") hidden=false multiple=true lookup_url="/resource/?filter.about.@type=Person"}}

    {{> FormElements/id.mustache property=created key="created" title=(i18n "Organization.created") tooltip=(i18n "Organization.created" bundle="descriptions") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Article"}}

    {{> FormElements/id.mustache property=mainEntityOf key="mainEntityOf" title=(i18n "Organization.mainEntityOf") tooltip=(i18n "Organization.mainEntityOf" bundle="descriptions") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Article"}}

    {{> FormElements/id.mustache property=mentionedIn key="mentionedIn" title=(i18n "Organization.mentionedIn") tooltip=(i18n "Organization.mentionedIn" bundle="descriptions") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Article"}}

    {{> FormElements/id.mustache property=participantIn key="participantIn" title=(i18n "Organization.participantIn") tooltip=(i18n "Organization.participantIn" bundle="descriptions") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Action"}}

    {{> FormElements/id.mustache property=provides key="provides" title=(i18n "Organization.provides") tooltip=(i18n "Organization.provides" bundle="descriptions") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Service"}}

    {{> FormElements/id.mustache property=agentIn key="agentIn" title=(i18n "Organization.agentIn") tooltip=(i18n "Organization.agentIn" bundle="descriptions") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Action"}}

    {{> FormElements/id.mustache property=member key="member" title=(i18n "Organization.member") tooltip=(i18n "Organization.member" bundle="descriptions") hidden=true multiple=true lookup_url="/resource/?q=(about.@type:Organization%20OR%20about.@type:Person)"}}

    {{> FormElements/id.mustache property=memberOf key="memberOf" title=(i18n "Organization.memberOf") tooltip=(i18n "Organization.memberOf" bundle="descriptions") hidden=false multiple=true lookup_url="/resource/?q=(about.@type:Organization%20OR%20about.@type:Service)"}}

    {{> FormElements/input.mustache property=sameAs key="sameAs" title=(i18n "Organization.sameAs") tooltip=(i18n "Organization.sameAs" bundle="descriptions") hidden=false multiple=true type="url"}}

    {{> FormElements/id.mustache property=funderOf key="funderOf" title=(i18n "Action.funderOf") tooltip=(i18n "Action.funderOf" bundle="descriptions") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Action"}}

    {{> FormElements/input.mustache property=tag key="tag" title=(i18n "Organization.tag") tooltip=(i18n "Organization.tag" bundle="descriptions") hidden=false multiple=true type="text"}}

</fieldset>
