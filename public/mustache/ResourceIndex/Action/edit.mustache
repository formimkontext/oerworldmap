<fieldset>

    <div class="hidden">
        <legend>Project</legend>
        {{input "@type" "Action" readonly="readonly"}}
        {{input "@id" [@id] readonly="readonly"}}
    </div>

    {{> FormElements/input.mustache property=additionalType key="additionalType" title=(i18n "Action.additionalType") hidden=true multiple=true type="text"}}

    {{> FormElements/input.mustache property=email key="email" title=(i18n "Action.email") hidden=false multiple=false type="email"}}

    {{> FormElements/localizedInput.mustache property=name key="name" title=(i18n "Action.name")}}

    {{> FormElements/localizedInput.mustache property=alternateName key="alternateName" title=(i18n "Action.alternateName")}}

    {{> FormElements/localizedTextarea.mustache property=description key="description" title=(i18n "Action.description")}}

    {{> FormElements/input.mustache property=image key="image" title=(i18n "Action.image") hidden=false multiple=false type="url"}}

    {{> FormElements/input.mustache property=url key="url" title=(i18n "Action.url") hidden=false multiple=false type="url"}}

    {{> FormElements/input.mustache property=startTime key="startTime" title=(i18n "Action.startTime") hidden=false multiple=false type="text"}}

    {{> FormElements/input.mustache property=endTime key="endTime" title=(i18n "Action.endTime") hidden=false multiple=false type="text"}}

    {{> ResourceIndex/Place/edit.mustache property=location key="location" title=(i18n "Action.location")}}

    {{> FormElements/id.mustache property=instrument key="instrument" title=(i18n "Action.instrument") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Service"}}

    {{> FormElements/id.mustache property=result key="result" title=(i18n "Action.result") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Service"}}

    {{> FormElements/id.mustache property=agent key="agent" title=(i18n "Action.agent") hidden=false multiple=true lookup_url="/resource/?q=(about.@type:Organization%20OR%20about.@type:Person)"}}

    {{> FormElements/id.mustache property=participant key="participant" title=(i18n "Action.participant") hidden=false multiple=true lookup_url="/resource/?q=(about.@type:Organization%20OR%20about.@type:Person)"}}

    {{> FormElements/id.mustache property=mainEntityOf key="mainEntityOf" title=(i18n "Action.mainEntityOf") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Article"}}

    {{> FormElements/id.mustache property=mentionedIn key="mentionedIn" title=(i18n "Action.mentionedIn") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Article"}}

    {{> FormElements/input.mustache property=sameAs key="sameAs" title=(i18n "Action.sameAs") hidden=false multiple=true type="url"}}

</fieldset>
