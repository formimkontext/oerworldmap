<form action="/user/register" method="post" data-app="to-modal-on-load">

    <h1>Register</h1>

    <input type="hidden" name="@type" value="Person">

    <label>
        Email: <input name="email">
    </label>

    <label>
        Password: <input name="password" type="password">
    </label>

    <label>
        Repeat password: <input name="password-confirm" type="password">
    </label>

    <button type="submit">Register</button>

</form>
