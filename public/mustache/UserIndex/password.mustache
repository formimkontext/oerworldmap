<div role="main" class="column column-medium color-scheme-text bg-blue-palest">
    <div class="column-container">

        {{#if username}}
            <h1>Set password</h1>
            <form method="post"">
                <input type="hidden" name="@type" value="Person">
                <label>
                    Current password: <input name="password" type="password">
                </label>

                <label>
                    New password: <input name="password-new" type="password">
                </label>

                <label>
                    Confirm new password: <input name="password-confirm" type="password">
                </label>

                <button type="submit">Set password</button>
            </form>
        {{ else }}
            <h1>Forgot password?</h1>
            <form method="post">
                <input type="hidden" name="@type" value="Person">
                <label>
                    Email: <input name="email">
                </label>
                <button type="submit">Reset password</button>
            </form>
        {{/if}}

    </div>
</div>
